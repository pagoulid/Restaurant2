@{
}


@model List<Restaurant.Web.Models.Entities.Product>

<div class="table-wrapper">

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Availability</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr scope="row">
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    @if (@product.Availability)
                    {
                        <td>Available</td>
                    }
                    else
                    {
                        <td>Not Available</td>
                    }

                    <td><a class="btn btn-primary" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Edit</a></td>
                </tr>
            }
        </tbody>

    </table>

    <a class=" my-3 btn btn-primary" asp-controller="Products" asp-action="New">Add Product</a>



</div>

