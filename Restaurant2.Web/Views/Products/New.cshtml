@model Restaurant.Web.Models.Entities.NewProductViewModel
<h1>Add Product</h1>
<form method="post" class="my-3 d-flex flex-column gap-2 justify-content-center">

    <div>
        <label class="form-label">Name:</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div>
        <label>Description:</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>

    <div>
        <label>Price:</label>
        <input type="number" step="0.01" class="form-control" asp-for="Price">
    </div>

    <div>
        <label for="Availability">Availability:</label>
        <input type="checkbox" class="form-check-input" id="Availability" asp-for="Availability" />
    </div>

    <button class="btn btn-primary" type="submit">Add</button>

</form>


