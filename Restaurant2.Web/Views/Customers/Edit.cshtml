@model Restaurant.Web.Models.Entities.Customer
<div class="form-wrapper">


    <form method="post" class=" my-3 d-flex flex-column gap-2 justify-content-center rounded">

        <div>
            <label class="form-label">ID:</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="row">

            <div class="col-6 d-flex flex-column gap-2 justify-content-center">
                <div>
                    <label class="form-label">Name:</label>
                    <input type="text" class="form-control" asp-for="Name" />
                </div>

                <div>
                    <label class="form-label">Surname:</label>
                    <input type="text" class="form-control" asp-for="Surname" />
                </div>
            </div>
            <div class="col-6 mt-2 d-flex flex-column gap-2 justify-content-cente">
                <div>
                    <label class="form-label">E-mail:</label>
                    <input type="text" class="form-control" asp-for="Email" />
                </div>

                <div>
                    <label class="form-label">Phone:</label>
                    <input type="text" class="form-control" asp-for="Phone" />
                </div>
            </div>
        </div>

        <div class=" mt-2 d-flex gap-2">
            <button class="btn btn-primary" type="submit">Save</button>
            <button class="btn btn-danger" type="submit" asp-action="Remove" asp-controller="Customers">Delete</button>
        </div>


    </form>


</div>


