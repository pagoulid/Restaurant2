@model List<Restaurant.Web.Models.Entities.Customer>

<div class="table-wrapper">


    <table id="TableDidplay" class="table display">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr scope="row">
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.Surname</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td><a class="btn btn-primary" asp-controller="Customers" asp-action="Edit" asp-route-id="@customer.Id">Edit</a></td>
                </tr>
            }
        </tbody>

    </table>

    <a class=" my-3 btn btn-primary" asp-controller="Customers" asp-action="New">Add Customer</a>

</div>

<script>
    $(document).ready(function () {
        
        var ctable = new DataTable('#TableDidplay',{
                        paging:true,
                        pageLength:3,
                        lengthMenu: [[3,5, 10, -1], [3,5, 10, "All"]],
                        lengthChange: true,
        
                        initComplete:(settings,json)=>{
                            console.log('Init Table Completed !')
                        }
        
        })
    });
</script>





