@{
}


@model List<Restaurant.Web.Models.Entities.Customer>

<div class="table-wrapper">


    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr scope="row">
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.Surname</td>
                    <td>@customer.Email</td>
                    <td>@customer.Phone</td>
                    <td><a class="btn btn-primary" asp-controller="Customers" asp-action="Edit" asp-route-id="@customer.Id">Edit</a></td>
                </tr>
            }
        </tbody>

    </table>

    <a class=" my-3 btn btn-primary" asp-controller="Customers" asp-action="New">Add Customer</a>

</div>


