@model Restaurant.Web.Models.Entities.Order
<div class="form-wrapper">

    <form method="post" class="my-3 d-flex flex-column gap-2 justify-content-center">

        <div class="row">


            <div class="col-6">
                <label class="form-label">ID:</label>
                <input type="text" class="form-control" asp-for="Id" readonly />
            </div>
            <div class="col-6">
                <label class="form-label">Customer Name:</label>
                <input type="text" class="form-control" asp-for="CustomerName" readonly />
            </div>
        </div>
        

        <div>
            <label class="form-label">Cart:</label>
            <!-- <input type="text" class="form-control" asp-for="Products" />-->
            <textarea class="form-control" asp-for="Products" ></textarea>
        </div>


        <div class="row">

            <div class="col-6 d-flex flex-column">
                <label class="form-label">Total:</label>
                <input class="form-control" type="number" step="0.01" asp-for="TotalPrice" />
            </div>

            <div class="col-6">
                <label class="form-label">Date:</label>
                <input type="datetime-local" class="form-control" id="datetime" name="datetime" asp-for="OrderDate" />
            </div>

        </div>
        
        <div>
            <label for="status" class="form-label">Status:</label>
            <select name="status" id="status" class="form-control">
                <option value="1">Σε Εκκρεμότητα</option>
                <option value="2">Ολοκληρωμένη</option>
                <option value="3">Ακυρωμένη</option>

            </select>

        </div>
        
        <div class="d-flex gap-2">

            <button class="btn btn-primary" type="submit">Save</button>
            <button class="btn btn-danger" type="submit" asp-action="Remove" asp-controller="Orders">Delete</button>
        </div>


    </form>

</div>
