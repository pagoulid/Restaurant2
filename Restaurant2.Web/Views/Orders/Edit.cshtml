@model Restaurant.Web.Models.Entities.Order
<form method="post" class="my-3 d-flex flex-column gap-2 justify-content-center">
    <div>
        <label class="form-label">ID:</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>
    <div>
        <label class="form-label">Customer Name:</label>
        <input type="text" class="form-control" asp-for="CustomerName" readonly />
    </div>

    <div>
        <label>Cart:</label>
        <input type="text" class="form-control" asp-for="Products" />
    </div>

    <div>
        <label>Total:</label>
        <input type="number" step="0.01 class="form-control" asp-for="TotalPrice" />
    </div>

    <div>
        <label>Date:</label>
        <input type="datetime-local" class="form-control" id="datetime" name="datetime" asp-for="OrderDate" />
    </div>
    <div class="d-flex gap-2">

        <button class="btn btn-primary" type="submit">Save</button>
        <button class="btn btn-danger" type="submit" asp-action="Remove" asp-controller="Orders">Delete</button>
    </div>
    

</form>

