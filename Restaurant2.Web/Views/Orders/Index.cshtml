@model List<Restaurant.Web.Models.Entities.Order>


<div class="table-wrapper">


    <table id="TableDidplay"  class="table display">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Customer</th>
                <th scope="col">Products</th>
                <th scope="col">Total</th>
                <th scope="col">Date</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr scope="row">
                    <td>@order.Id</td>
                    <td>@order.CustomerName</td>
                    <td>@order.Products</td>
                    <td>@order.TotalPrice</td>
                    <td>@order.OrderDate</td>
                    <td>@order.Status</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Orders" asp-action="Edit" asp-route-id="@order.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <a class=" my-3 btn btn-primary" asp-controller="Orders" asp-action="New">Add Order</a>

</div>

<script>
    $(document).ready(function () {

        var ctable = new DataTable('#TableDidplay',{
                        paging:true,
                        pageLength:3,
                        lengthMenu: [[3,5, 10, -1], [3,5, 10, "All"]],
                        lengthChange: true,
                        initComplete:(settings,json)=>{
                            console.log('Init Table Completed !')
                        }

        })
    });
</script>

